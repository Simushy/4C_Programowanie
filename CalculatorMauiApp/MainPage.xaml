<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorMauiApp.MainPage"
             xmlns:ViewModel="clr-namespace:CalculatorMauiApp">
    <ContentPage.BindingContext>
        <ViewModel:CalculatorViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="*, *,*,*,*" ColumnDefinitions="*,*,*,*,*" RowSpacing="10" ColumnSpacing="10" Padding="10, 10, 10, 10">
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" FontSize="100" VerticalTextAlignment="Center" HorizontalTextAlignment="End"  Text="{Binding CalculatingResult}"></Label>
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="0" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="3" Grid.Column="0" Text="1" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="3" Grid.Column="1" Text="2" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="3" Grid.Column="2" Text="3" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="2" Grid.Column="0" Text="4" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="2" Grid.Column="1" Text="5" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="2" Grid.Column="2" Text="6" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="1" Grid.Column="0" Text="7" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="1" Grid.Column="1" Text="8" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="1" Grid.Column="2" Text="9" FontSize="90" Command="{Binding NumberCommand}" CommandParameter="{Binding Text, Source={x:RelativeSource Self}}"></Button>
        <Button Grid.Row="1" Grid.Column="3" Text="×" FontSize="90"></Button>
        <Button Grid.Row="2" Grid.Column="3" Text="÷" FontSize="90"></Button>
        <Button Grid.Row="3" Grid.Column="3" Text="+" FontSize="90"></Button>
        <Button Grid.Row="4" Grid.Column="3" Text="-" FontSize="90"></Button>
        <Button Grid.Row="1" Grid.Column="4" Text="⭠" FontSize="90"></Button>
        <Button Grid.Row="2" Grid.Column="4" Grid.RowSpan="3" Text="=" FontSize="90"></Button>
    </Grid>
    

</ContentPage>
